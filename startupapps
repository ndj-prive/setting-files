#!/bin/bash

aptana=$HOME"/Aptana Studio 2.0/AptanaStudio"
applicationsProcess=( nautilus empathy thunderbird-bin VBoxSVC clementine gnome-shell chrome Tasque hotot freemind Aptana )
applications=( nautilus empathy thunderbird virtualbox clementine terminator google-chrome  tasque hotot freemind $aptana )
alreadyRunning="Is already running\n"

totalApplications=${#applications[@]}

for((i=0;i<$totalApplications;i++))
 do
  if [ -z "$(pgrep ${applicationsProcess[$i]})" ]
   then
    echo "Starting ${applications[$i]}..."
    ${applications[$i]} &
    echo "Started up ${applications[$i]}"
  else
    echo "${applications[$i]} $alreadyRunning"
  fi
 done
